@model CreateProjectViewModel
@{
    ViewBag.Title = "Edit";
}

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.ProjectName, "Project name:")
        @Html.TextAreaFor(p => p.ProjectName, new { @class = "form-control", placeholder = "Project name" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>
