@model List<Mvc2.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<form method="post">
    @Html.ValidationSummary(false)

    @foreach (Mvc2.Models.ApplicationUser user in Model)
    {
        <div class="form-group">
            <p>@user.UserName</p>
            <p>@user.DisplayName</p>
            @Html.ActionLink("Manage Roles", "AssignRole", new { id = user.Id })
        </div>
    }
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>
