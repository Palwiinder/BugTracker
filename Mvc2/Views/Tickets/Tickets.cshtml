@model List<TicketsViewModel>
@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>


@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>No Tickets Available </strong></p>
    </div>
}
else
{

    <table id="sample-datatables" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Type</th>
                <th>Status</th>
                <th>Date Created</th>
                <th>Date Updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.Title</td>
                    <td>@record.Description</td>
                    <td>@record.Priority</td>
                    <td>@record.Status</td>
                    <td>@record.Type</td>
                    <td>@record.DateCreated</td>
                    <td>@record.DateUpdated</td>
                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = record.TicketId }) |
                        @Html.ActionLink("Details", "Detail", new { id = record.TicketId })

                    </td>
                </tr>
            }


        </tbody>
    </table>
}




